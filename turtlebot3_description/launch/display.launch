<launch>
  <arg name="model" default="$(find turtlebot3_description)/urdf/turtlebot3_$(env TURTLEBOT3_MODEL).urdf.xacro"/>

  <arg name="gui" default="true" />
  <arg name="rviz_config" default="$(find turtlebot3_description)/launch/config/$(env TURTLEBOT3_MODEL)/display.rviz"/>

  <param name="robot_description" command="$(find xacro)/xacro --inorder '$(arg model)'"/>
  <param name="use_gui" value="$(arg gui)"/>
  <param name="use_sim_time" value="true" />

<!--  <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"/> -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
    <remap from="joint_states" to="/$(env TURTLEBOT3_MODEL)/joint_states"/>
  </node>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rviz_config)" required="true"/>

</launch>
